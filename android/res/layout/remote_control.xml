<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" android:layout_height="fill_parent" 
	android:orientation="vertical"
	android:padding="8dp"
		xmlns:android="http://schemas.android.com/apk/res/android">

<Button android:text="@string/play"
	android:id="@+id/play" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
	
<Button android:text="@string/pause" android:id="@+id/pause" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
	
<Button android:text="@string/next" android:id="@+id/next" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
	
<LinearLayout android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" android:layout_height="fill_parent" 
	android:orientation="horizontal">
	
	<Button android:text="@string/up" android:id="@+id/up" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	
	<Button android:text="@string/down" android:id="@+id/down" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	
		
		
</LinearLayout>
	
</LinearLayout>
